<Window x:Class="StaniszkiSmartHome.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StaniszkiSmartHome"
        mc:Ignorable="d"
        Title="Staniszki SmartHome"
        Height="1080" Width="1920"
        WindowStyle="None"
        WindowState="Maximized">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="70" />
            <RowDefinition />
            <RowDefinition Height="70" />
        </Grid.RowDefinitions>


        <!-- GÓRNA BELKA / Row number 0 -->
        <Grid Grid.Row="0" Background="#FF1F1F1F">
            <TextBlock Text="STANISZKI SmartHome" Foreground="White" VerticalAlignment="Center" FontSize="30" Padding="20,0,0,0"/>
            <TextBlock x:Name="TopDateTimeTextBlock" Grid.Column="1" Text="0000-00-00 00:00:00" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="20" Margin="0,0,16,0"/>
        </Grid>


        <!-- GŁÓWNE OKNO / Row number 1 -->
        <Grid Grid.Row="1">
            <ContentControl x:Name="ViewContent"/>
        </Grid>


        <!-- STOPKA / Row number 2 -->
        <Grid Grid.Row="2" Background="#FF1F1F1F">
            <TextBlock Text="Copyright 2025 @ Paweł Stanisz | ver. v0.0.2" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" />
        </Grid>

    </Grid>
    
</Window>
